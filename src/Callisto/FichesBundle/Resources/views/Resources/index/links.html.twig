{# src/Callisto/FichesBundle/Resources/views/Resources/index/links.html.twig #}

{% if links|length > 0 %}
    <ul class="nav nav-tabs nav-stacked resources">
        {% for link in links %}
            <li>
                <a href="{{ link.value }}">
                    <h2 style="margin-bottom:-5px">{{ link.title }} <i class="fa fa-external-link"></i></h2>
                    <p>{{ link.description }}</p>
                </a>
            </li>
        {% endfor %}
    </ul>
{% else %}
    <p>Aucune ressource en ligne</p>
{% endif %}
