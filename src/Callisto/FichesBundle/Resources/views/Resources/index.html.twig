{# src/Callisto/FichesBundle/Resources/views/Resources/index.html.twig #}

{% extends "CallistoFichesBundle:Default:index.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.10/css/jquery.dataTables.min.css" type="text/css" />
{% endblock %}

{% block callisto_content %}
    <div class="row">
        <div class="span12">
            <div class="page-header">
                <h1>Ressources</h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="span12">
            <table id="ressources" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Type</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for document in documents %}
                        {% include "CallistoFichesBundle:Resources:index/row_document.html.twig" with {'element': document} %}
                    {% endfor %}
                    {% for link in links %}
                        {% include "CallistoFichesBundle:Resources:index/row_link.html.twig" with {'element': link} %}
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th>Titre</th>
                        <th>Type</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

{% endblock %}

{% block javascripts_endpage %}
    <script type="text/javascript" src="//cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js"></script>
    <script src="{{ asset('bundles/callistofiches/js/ressources.js') }}" type="text/javascript"></script>
{% endblock %}
