{# src/Callisto/FichesBundle/Resources/views/Default/index.html.twig #}
<!DOCTYPE html>
<html>
    <head>
    <title>{{ titre|striptags }} - Callisto - Université de Fribourg</title>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <meta name="keywords" lang="fr" content="universit&eacute;, formation, suisse, fribourg, recherche, &eacute;tudes" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/callistofiches/css/bootstrap.min.css') }}" type="text/css" media="all" />

        <link href="{{ asset('bundles/callistofiches/css/unifr.101.css') }}" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" href="{{ asset('bundles/callistofiches/css/jquery-ui-1.7.1.custom.css') }}" type="text/css" />
        <!-- Add fancyBox -->
        <link rel="stylesheet" href="{{ asset('bundles/callistofiches/js/fancybox/jquery.fancybox.css') }}" type="text/css" media="screen" />
        <link rel="stylesheet" href="{{ asset('bundles/callistofiches/js/fancybox/helpers/jquery.fancybox-buttons.css') }}" type="text/css" media="screen" />
        <!-- Add jcarousel -->
        <link rel="stylesheet" href="{{ asset('bundles/callistofiches/css/skin.css') }}" type="text/css" media="screen" />
        <link rel="stylesheet" href="{{ asset('bundles/callistofiches/css/style.css') }}" type="text/css" media="screen" />
        <!-- Font awesome -->
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    {% endblock %}

    {% block javascripts %}
        <script type="text/javascript" src="{{ asset('bundles/callistofiches/js/jquery-1.8.3.min.js') }}"></script>

        <script type="text/javascript" src="{{ asset('bundles/callistofiches/js/jquery-ui-1.7.1.custom.min.js') }}"></script>
        <!-- Add fancyBox -->
        <script type="text/javascript" src="{{ asset('bundles/callistofiches/js/fancybox/jquery.fancybox.pack.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/callistofiches/js/fancybox/helpers/jquery.fancybox-buttons.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/callistofiches/js/fancybox/helpers/jquery.fancybox-media.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/callistofiches/js/jquery.jcarousel.min.js') }}"></script>
        <script src="{{ asset('bundles/callistofiches/js/callisto.js') }}" type="text/javascript"></script>

        <script src="{{ asset('bundles/callistofiches/js/bootstrap.min.js') }}" type="text/javascript"></script>
    {% endblock %}
    </head>

    <body>

        <div class="container main" style="text-align: left;">
            <div id="webpage2">
      <!-- start:identite -->
        <div id="identity" class="visible-desktop">
            <div class="bandeau">
                <a href="http://www.unifr.ch"><img class="bandeau-faculty" border="0" src="{{ asset('bundles/callistofiches/img/bandeau_unifr_universite.jpg') }}" alt="Université de Fribourg | Universität Freiburg"></a>
                <div id="address2">
                    <div class="txt">
                        <a href="{{ path('home') }}">CALLISTO</a>
                    </div>
                </div>
            </div>
        </div>

      <div class="hidden-desktop">
        <img src="{{ asset('bundles/callistofiches/img/bandeau_unifr_universite.jpg') }}" alt="UniFR Logo" />
      </div>
      <!-- end:identite -->

                <!-- start:navig -->
<!--                <div id="navigBarre">-->

<!--                    <div id="nbLeft">-->
<!--                        {{ knp_menu_render('CallistoFichesBundle:Builder:leftMenu') }}-->
<!--                    </div>-->

<!--                    <div id="nbRight">-->
<!--                        {{ knp_menu_render('CallistoFichesBundle:Builder:topMenu') }}-->
<!--                    </div>-->

<!--                </div>-->
                <!-- end:navig -->

                <!-- start:navig 2 -->
                <div class="navbar">
                    <div class="navbar-inner">
                        <div class="container">

                            <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
                            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            </a>

                            <!-- Be sure to leave the brand out there if you want it shown -->
                                <a class="brand" href="{{ path('home') }}">Callisto</a>

                            <!-- Everything you want hidden at 940px or less, place within here -->
                            <div class="nav-collapse collapse">
                            <!-- .nav, .navbar-search, .navbar-form, etc -->
                                <ul class="nav">

                                    <li><a href="{{ path('home') }}">Home</a></li>
                                    <li><a href="{{ path('recherche') }}">Recherche</a></li>
                                    <li><a href="{{ path('resources') }}">Ressources</a></li>
                                    <li><a href="{{ path('page_show', {id: 4} ) }}">Notices d'utilisation</a></li>
                                </ul>
                                <ul class="nav pull-right">
                                    <li><a href="{{ path('page_show', {id: 5} ) }}">Infos</a></li>
                                    <li><a href="{{ path('faq') }}">FAQ</a></li>
                                    <li><a href="{{ path('contact') }}">Contact</a></li>
                                </ul>
                            </div>

                        </div>
                    </div>
                </div><!-- end:navig 2 -->

                <div class="container-fluid">
                    <div class="row-fluid">
                        <div class="span3 hidden-phone">
                                <!-- box menu2 -->
                                {% block callisto_sideblock %}
                                    <!-- box blog -->
                                    <div class="box001">
                                    </div>
                                    <!-- end:box blog -->
                                {% endblock %}
                        </div>

                        <!-- end:colonneLeft -->
                        <div class="span9">
                            <ul style="margin-right: 10px;">
                                <!-- start:colonneRight -->
                                <div id="content2">
                                    {% block callisto_content %}
                                        <div align="center">
                                                <p>
                                                    <strong>{% if page.introduction is defined %}{{ page.introduction|raw }}{% endif %}</strong>
                                                </p>
                                                <p>
                                                    {% if page.text is defined %}{{ page.text|raw }}{% endif %}
                                                </p>
                                        </div>
                                    {% endblock %}
                                <!-- end:colonneRight -->
                            </ul>
                        </div>

                        <div class="span3 visible-phone">
                            <div class="well" align="center">
                                    <!-- box menu2 -->
                                    {% block callisto_sideblock2 %}
                                    {% endblock %}
                            </div>
                        </div>
                    </div>

                </div>
                <!-- end:main -->

                    <!-- start:signature -->
                    <div id="signature">
                        Conception et réalisation : V. Dasen &amp; <a href="http://www.unifr.ch/nte/">Centre NTE</a> - Université de Fribourg - Suisse
                    </div>
                    <!-- end:signature -->

            </div>
        </div>
        {% block javascripts_endpage %}
        {% endblock %}
    </body>
</html>
